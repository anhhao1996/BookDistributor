@model PHSach.Models.Bill_Import

@{
    ViewBag.Title = "Create";
}

<h2>Tạo phiếu nhập sách</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
@Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-horizontal">
        <hr />
        
        <div class="form-group col-sm-10">           
                <div class="col-sm-6">  
                    <label for="disabledInput">Tên NXB:</label>                  
                    @Html.DropDownList("NXB_id", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.NXB_id, "", new { @class = "text-danger" })
                </div>
        </div>

        <div class="form-group col-sm-10">
            <div class="col-md-6">
                <label for="disabledInput">Người giao hàng:</label>
                @Html.EditorFor(model => model.Deliver, new { htmlAttributes = new { @class = "form-control" } })               
                @Html.ValidationMessageFor(model => model.Deliver, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Nhập chi tiết" class="btn btn-default" />
            </div>
        </div>
</div>
}
