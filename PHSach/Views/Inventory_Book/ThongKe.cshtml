
@{
    ViewBag.Title = "ThongKe";
}

<h2>Thống kê tồn kho</h2>

<p>
    <a class="btn btn-primary btnThemPhieuNhap" href="~/Inventory_Book/Index">Quay lại</a>
</p>

@using (Html.BeginForm("ThongKe", "Inventory_Book", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />

        <div class="form-group col-sm-10">
            <div class="col-sm-6">
                <label for="disabledInput">Chọn ngày thống kê</label>
                <div class='input-group date' id="myDate">
                    <input id="date" name="date" type="date" class="form-control col-md-7 col-xs-12" />
                </div>
            </div>


            <div class="form-group col-sm-10">
                <div class="col-sm-6">
                    <label for="disabledInput">Chọn sách</label>
                    @Html.DropDownList("danhsach", null, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thống kê" class="btn btn-default" />
            </div>
        </div>
    </div>
    <br /><br />
        <div class="form-group">
 
            <div class="col-md-offset-2 col-md-10">
                @if(ViewBag.ketqua != null)
                {
                    <b>@ViewBag.ketqua</b>
                }
            </div>
        </div>
}